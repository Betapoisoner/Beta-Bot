{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "outDir": "../../dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "rootDir": "../..",
    "sourceMap": true,
    "incremental": true,
    "removeComments": false,
    "noEmitOnError": true,
    "pretty": true,
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@core/*": [
        "core/*"
      ],
      "@database/*": [
        "database/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@types/*": [
        "types/*"
      ]
    },
  },
  "include": [
    "../../src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}