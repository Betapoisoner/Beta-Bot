{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "rootDir": "src",
    "sourceMap": true,
    "incremental": true,
    "removeComments": false,
    "noEmitOnError": true,
    "pretty": true,
    "paths": {
      "@config/*": [
        "src/config/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@types/*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}